{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "group:all"],
  "timezone": "America/Los_Angeles",
  "schedule": ["before 10am on Monday"],
  "pinDigests": true,
  "customManagers": [
    {
      "description": "Update Rust stable version in rust-toolchain.toml",
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)rust-toolchain\\.toml?$/"],
      "matchStrings": [
        "channel\\s*=\\s*\"(?<currentValue>\\d+\\.\\d+(\\.\\d+)?)\""
      ],
      "depNameTemplate": "rust",
      "packageNameTemplate": "rust-lang/rust",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)\\.npmrc$/"],
      "matchStrings": ["use-node-version=(?<currentValue>.*?)\\n"],
      "depNameTemplate": "node",
      "datasourceTemplate": "node-version"
    },
    {
      "description": "Update crate versions installed by Cargo in Dockerfiles",
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)([^/]+\\.)?Dockerfile$/"],
      "matchStrings": [
        "cargo install\\s+(?<depName>\\S+)@(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "crate"
    },
    {
      "description": "Update Stripe CLI version in ci.yml",
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)ci\\.yml$/"],
      "matchStrings": [
        "STRIPE_CLI_VERSION=\"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
      ],
      "depNameTemplate": "stripe-cli",
      "packageNameTemplate": "stripe/stripe-cli",
      "datasourceTemplate": "github-releases"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["* 1-9 1 * *"],
    "automerge": true,
    "platformAutomerge": false,
    "automergeSchedule": ["* 10-16 * * 1-5"]
  }
}
